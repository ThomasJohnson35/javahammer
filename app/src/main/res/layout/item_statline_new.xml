<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/statline_labels"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/warm_black"
    android:backgroundTint="#002196F3"
    android:backgroundTintMode="add"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <TextView
        android:id="@+id/invuln_save_label_tv"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:layout_marginStart="200dp"
        android:layout_marginBottom="16dp"
        android:text="Invulnerable Save"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/movement_square"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            app:cardBackgroundColor="@color/astartes_blue"
            app:cardElevation="50dp">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/pretty_square"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:shapeAppearanceOverlay="@style/CornerCut"
                app:srcCompat="@drawable/myshape" />

            <TextView
                android:id="@+id/movement_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="6&quot;"
                android:textAlignment="center"
                android:textColor="@color/astartes_blue_alt"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@+id/pretty_square"
                app:layout_constraintEnd_toEndOf="@+id/pretty_square"
                app:layout_constraintStart_toStartOf="@+id/pretty_square"
                app:layout_constraintTop_toTopOf="@+id/pretty_square" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/toughness_square"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            app:cardBackgroundColor="@color/astartes_blue"
            app:cardElevation="50dp">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/pretty_square_toughness"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:shapeAppearanceOverlay="@style/CornerCut"
                app:srcCompat="@drawable/myshape" />

            <TextView
                android:id="@+id/toughness_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="4"
                android:textAlignment="center"
                android:textColor="@color/astartes_blue_alt"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@+id/pretty_square_toughness"
                app:layout_constraintEnd_toEndOf="@+id/pretty_square_toughness"
                app:layout_constraintStart_toStartOf="@+id/pretty_square_toughness"
                app:layout_constraintTop_toTopOf="@+id/pretty_square_toughness" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/save_square"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            app:cardBackgroundColor="#00032F43"
            app:cardElevation="50dp">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/pretty_square_invuln_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/pretty_square_save"
                app:shapeAppearanceOverlay="@style/CornerCut"
                app:srcCompat="@drawable/myshape" />

            <TextView
                android:id="@+id/invuln_save_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="3+"
                android:textAlignment="center"
                android:textColor="@color/astartes_blue_alt"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@+id/pretty_square_invuln_save"
                app:layout_constraintEnd_toEndOf="@+id/pretty_square_invuln_save"
                app:layout_constraintStart_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/pretty_square_invuln_save"
                app:layout_constraintTop_toTopOf="@+id/pretty_square_invuln_save" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/pretty_square_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:shapeAppearanceOverlay="@style/CornerCut"
                app:srcCompat="@drawable/myshape" />

            <TextView
                android:id="@+id/save_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="3+"
                android:textAlignment="center"
                android:textColor="@color/astartes_blue_alt"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@+id/pretty_square_save"
                app:layout_constraintEnd_toEndOf="@+id/pretty_square_save"
                app:layout_constraintStart_toStartOf="@+id/pretty_square_save"
                app:layout_constraintTop_toTopOf="@+id/pretty_square_save" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/wounds_square"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            app:cardBackgroundColor="@color/astartes_blue"
            app:cardElevation="50dp">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/pretty_square_wounds"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:shapeAppearanceOverlay="@style/CornerCut"
                app:srcCompat="@drawable/myshape" />

            <TextView
                android:id="@+id/wounds_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="2"
                android:textAlignment="center"
                android:textColor="@color/astartes_blue_alt"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@+id/pretty_square_wounds"
                app:layout_constraintEnd_toEndOf="@+id/pretty_square_wounds"
                app:layout_constraintStart_toStartOf="@+id/pretty_square_wounds"
                app:layout_constraintTop_toTopOf="@+id/pretty_square_wounds" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ld_square"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            app:cardBackgroundColor="@color/astartes_blue"
            app:cardElevation="50dp">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/pretty_square_ld"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:shapeAppearanceOverlay="@style/CornerCut"
                app:srcCompat="@drawable/myshape" />

            <TextView
                android:id="@+id/leadership_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="6+"
                android:textAlignment="center"
                android:textColor="@color/astartes_blue_alt"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@+id/pretty_square_ld"
                app:layout_constraintEnd_toEndOf="@+id/pretty_square_ld"
                app:layout_constraintStart_toStartOf="@+id/pretty_square_ld"
                app:layout_constraintTop_toTopOf="@+id/pretty_square_ld" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/oc_square"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            app:cardBackgroundColor="@color/astartes_blue"
            app:cardElevation="50dp">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/pretty_square_oc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:shapeAppearanceOverlay="@style/CornerCut"
                app:srcCompat="@drawable/myshape" />

            <TextView
                android:id="@+id/objective_control_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="2"
                android:textAlignment="center"
                android:textColor="@color/astartes_blue_alt"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@+id/pretty_square_oc"
                app:layout_constraintEnd_toEndOf="@+id/pretty_square_oc"
                app:layout_constraintStart_toStartOf="@+id/pretty_square_oc"
                app:layout_constraintTop_toTopOf="@+id/pretty_square_oc" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
