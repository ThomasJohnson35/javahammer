<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/contraint_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/keywords_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ranged_weapon_linear_layout" />

    <LinearLayout
        android:id="@+id/ranged_weapon_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/item_weapon_arrow_iv"
            android:layout_width="5dp"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:visibility="invisible"
            app:srcCompat="@drawable/pentagon_arrow"
            app:tint="#000000"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/weapon_quantity_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="1X"
            android:visibility="gone"
            tools:visibility="gone" />

        <TextView
            android:id="@+id/name_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:layout_weight="3.5"
            android:text="Weapon's Name" />

        <TextView
            android:id="@+id/range_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.1"
            android:text="Range"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/attacks_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="A"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/bs_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="BS"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/strength_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="S"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/ap_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="AP"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/damage_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="D"
            android:textAlignment="center" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
